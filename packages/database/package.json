{
  "name": "@creatoriq/database",
  "version": "1.0.0",
  "description": "Database layer with Prisma ORM for CreatorIQ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "keywords": ["database", "prisma", "postgresql"],
  "author": "Alankar",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@creatoriq/shared-types": "1.0.0"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  },
  "files": [
    "dist"
  ]
}